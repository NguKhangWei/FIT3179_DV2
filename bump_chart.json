{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "IMO bump chart: 5 countries 2014-2024 (India replaces Russia) with legend on the side and no labels",
  "title": {
    "text": "Top 5 Active IMO Participating Countries",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "middle",
    "offset": 20
  },
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/NguKhangWei/FIT3179_DV2/main/data/cleaned_country_imo.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.country_new === 'United States of America' || datum.country_new === 'China' || datum.country_new === 'South Korea' || datum.country_new === 'Germany' || datum.country_new === 'India'"
    },
    {"filter": "datum.year >= 2014 && datum.year <= 2024"},
    {
      "window": [{"op": "row_number", "as": "rank"}],
      "groupby": ["year"]
    }
  ],
  "mark": {
    "type": "line",
    "strokeWidth": 3,
    "interpolate": "linear",
    "point": {"filled": true, "size": 200, "shape": "circle"}
  },
  "encoding": {
    "x": {"field": "year", 
          "type": "ordinal",
          "axis": {
          "labelAngle": 0,
          "labelPadding": 10  
  }},
    "y": {
      "field": "rank",
      "type": "quantitative",
      "scale": {"reverse": true, "domain": [1, 5]},
      "axis": {
        "title": "Ranking",
        "tickMinStep": 1,
        "format": "d"
      }
    },
    "color": {
      "field": "country_new",
      "type": "nominal",
      "legend": {
        "orient": "right",
        "title": "Country",
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "detail": {"field": "country_new"}
  },
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 14}
  }
}
