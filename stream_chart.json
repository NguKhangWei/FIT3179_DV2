{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Dynamic 10-year streamgraph from CSV",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/NguKhangWei/FIT3179_DV2/refs/heads/main/data/test_stream.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": {
    "type": "area",
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "stack": "center",
      "axis": null
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "scale": {"scheme": "tableau10"}
    }
  }
}
