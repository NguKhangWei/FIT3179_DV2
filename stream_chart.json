{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Streamgraph with inverted brown palette",
  "width": 1000,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/NguKhangWei/FIT3179_DV2/main/data/stream_data_normalized.csv",
    "format": {"type": "csv"}
  },
  "mark": {
    "type": "area",
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "stack": "center",
      "axis": null
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "scale": {
        "range": [
          "#543005",
          "#723d0d",
          "#8c510a",
          "#a6611a",
          "#c08e54",
          "#d8b365",
          "#e5d8a9",
          "#f6e8c3"
        ]
      },
      "legend": {"title": "Category"}
    }
  }
}
